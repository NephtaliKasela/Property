@model Property.DTOs.Category.GetCategoryDTO

@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="mt-5 mb-4">
	<nav aria-label="breadcrumb">
		<ol class="breadcrumb mb-0">
			<li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Dashboard</a></li>
			<li class="breadcrumb-item"><a asp-controller="Category" asp-action="Getcategory">Categories</a></li>
			<li class="breadcrumb-item active" aria-current="page">Update</li>
			<li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
		</ol>
	</nav>
</div>

<div class="card py-5">
	<div class="container">
		<form method="post" asp-controller="Category" asp-action="SaveUpdateCategory">
			<div class="form-group">
				<input type="hidden" class="form-control" id="id" name="id" value="@Model.Id" required>
			</div>
			<div class="form-group">
				<label for="name">Name:</label>
				<input type="text" class="form-control" id="name" name="name" value="@Model.Name" required>
			</div>
			<div class="form-group">
				<label for="description">Description:</label>
				<textarea class="form-control" id="description" name="description" rows="4" required>@Model.Description</textarea>
			</div>

			<button type="submit" class="btn btn-primary mt-5">Update</button>
		</form>
	</div>
</div>