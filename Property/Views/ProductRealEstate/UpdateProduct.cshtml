@model Property.DTOs.Actions.UpdateProductRealEstate_action

@{
	Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div class="row page-titles">
	<ol class="breadcrumb">
		<li class="breadcrumb-item active"><a href="javascript:void(0)">Real Estate</a></li>
		<li class="breadcrumb-item"><a href="javascript:void(0)">Add</a></li>
	</ol>
</div>
<!-- row -->

<div class="container">
	<form method="post" asp-controller="ProductRealEstate" asp-action="SaveUpdateProduct">

		<br />
		<div class="form-group">
			<label for="productCategory">Category:</label>
			<select id="ProductSubCategoryId" name="ProductSubCategoryId" class="form-control" required>
				<option value="@Model.Product.SubcategoryRealEstate.Id">@Model.Product.SubcategoryRealEstate.Name</option>
				@foreach (var sc in Model.Subcategories)
				{
					<option value="@sc.Id">@sc.Name</option>
				}
			</select>
		</div>

		<div class="form-group">
			<label for="name">Name</label>
			<input type="text" class="form-control" id="name" name="name" value="@Model.Product.Name" placeholder="Enter name">
		</div>
		<div class="form-group">
			<label for="Description">Description:</label>
			<textarea id="Description" name="Description" class="form-control" style="min-height: 100px;" required></textarea>

			<script>
				// Get a reference to the textarea element
				var textarea = document.getElementById('Description');

				// Set the value of the textarea using your model's value
				var modelValue = "@Model.Product.Description";
				textarea.value = modelValue;
			</script>
		</div>
		<div class="form-group">
			<label for="price">Price</label>
			<input type="number" class="form-control" id="price" name="price" value="@Model.Product.Price" placeholder="Enter price">
		</div>

		<div class="form-group">
			<label for="TransactionTypeId">Transaction Type:</label>
			<select id="TransactionTypeId" name="TransactionTypeId" class="form-control" required>
				<option value="@Model.Product.TransactionType.Id">@Model.Product.TransactionType.Name</option>
				@foreach (var transactionType in Model.TransactionTypes)
				{
					<option value="@transactionType.Id">@transactionType.Name</option>
				}
			</select>
		</div>

		<div class="form-group">
			<label for="room">Room</label>
			<input type="number" class="form-control" id="room" name="room" value="@Model.Product.Room" placeholder="Enter number of rooms">
		</div>
		<div class="form-group">
			<label for="address">Address</label>
			<input type="text" class="form-control" id="address" name="address" value="@Model.Product.Address" placeholder="Enter address">
		</div>
		<div class="form-group">
			<label for="yearOfConstruction">Year of Construction (Current date: @Model.Product.YearOfConstruction.ToShortDateString())</label>
			<input type="date" class="form-control" id="yearOfConstruction" name="yearOfConstruction">
		</div>

		<br />
		<div class="form-group">
			<label for="CountryId">Country:</label>
			<select id="CountryId" name="CountryId" class="form-control" required>
				<option value="@Model.Product.Country.Id">@Model.Product.Country.Name</option>
				@foreach (var country in Model.Countries)
				{
					<option value="@country.Id">@country.Name</option>
				}
			</select>
		</div>

		<br />
		<div class="form-group">
			<label for="CityId">City:</label>
			<select id="CityId" name="CityId" class="form-control" required>
				<option value="@Model.Product.City.Id">@Model.Product.City.Name</option>
				@foreach (var city in Model.Cities)
				{
					<option value="@city.Id">@city.Name</option>
				}
			</select>
		</div>

		<br />
		<input type="submit" value="Update" class="btn btn-primary">
	</form>

</div>

<br />
<br />
<hr />
<br />

<!--**************************
				IMAGE SECTION START
			**************************-->
<h2>Image</h2>
<br />

<div class="row">
	@foreach (var image in Model.Product.ProductImages)
	{
		<div class="col-sm-12 col-md-6 col-lg-6">
			<img src="data:@image.ContentType;base64,@System.Convert.ToBase64String(image.ImageData)" style="max-height: 400px; margin: 1px;" />
		</div>
	}
</div>

<br />
<br />
<form method="post" asp-controller="ProductImageRealEstate" asp-action="AddProductImage" enctype="multipart/form-data">
	<input type="hidden" id="productId" name="productId" value="@Model.Product.Id" />
	<div class="form-group">
		<label for="productImages">Images:</label>
		<input type="file" name="files" multiple class="form-control-file" required>
	</div>
	<br />
	<input type="submit" value="Add image" class="btn btn-primary">
</form>

<!--**************************
	IMAGE SECTION END
**************************-->
