@{
    Layout = "~/Views/Shared/_AgentLayout.cshtml";
}


<div class="container" style="margin-top: 200px; margin-bottom: 100px;">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card" style="box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2); border-radius: 5px;">
                <div class="card-body">
                    <h4 class="card-title" style="text-align: center;">Choose an Action</h4>
                    <form asp-controller="ProductRealEstate" asp-action="Choice">
                        <div class="form-group" style="margin-bottom: 20px;">
                            <label for="action">Action:</label>
                            <select class="form-control" id="action" name="option" onchange="toggleSubOptions()" required>
                                <option value="sell">Sell</option>
                                <option value="rent">Rent</option>
                            </select>
                        </div>
                        <div class="form-group" id="subOptions" style="display: none; margin-bottom: 20px;">
                            <label for="rentOption">Rent Option:</label>
                            <select class="form-control" id="rentOption" name="subOption">
                                <option value="RD">Rent by Day</option>
                                <option value="RM">Rent by Month</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary bt-3">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function toggleSubOptions() {
      var actionSelect = document.getElementById("action");
      var subOptionsDiv = document.getElementById("subOptions");

      if (actionSelect.value === "rent") {
        subOptionsDiv.style.display = "block";
      } else {
        subOptionsDiv.style.display = "none";
      }
    }
</script>




