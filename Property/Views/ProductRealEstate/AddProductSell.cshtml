@model Property.DTOs.Actions.AddProductRealEstate_action

@{
	Layout = "~/Views/Shared/_AgentLayout.cshtml";
}

<div class="hero page-inner overlay"
	style="background-image: url('@Url.Content("~/Images/hero_bg_3.jpg")')">
	<div class="container">
		<div class="row justify-content-center align-items-center">
			<div class="col-lg-9 text-center mt-5 mb-5">
				<h1 class="heading" data-aos="fade-up" style="color: white;">Sale Property</h1>
			</div>
		</div>
	</div>
</div>

<div class="">
	<nav aria-label="breadcrumb">
		<ol class="breadcrumb mb-0">
			<li class="breadcrumb-item"><a asp-controller="Agent" asp-action="Properties">Properties</a></li>
			<li class="breadcrumb-item active" aria-current="page">new Property</li>
		</ol>
	</nav>
</div>

<div class="card">
	<div class="container">
		<form method="post" asp-controller="ProductRealEstate" asp-action="SaveAddProductSell">

			<h4 class="mt-4 mb-2">Basic Information</h4>

			<div class="row">
				<div class="col-md-12">
					<div class="form-group" style="margin-bottom: 5px;">
						<label for="name">Title:</label>
						<input type="text" class="form-control" id="name" name="name" placeholder="Enter name">
					</div>
				</div>
				<div class="col-md-6">
					<div class="form-group" style="margin-bottom: 5px;">
						<label for="PropertyTypeId">Property type:</label>
						<select id="PropertyTypeId" name="PropertyTypeId" class="form-control" required>
							@foreach (var sc in Model.PropertyTypes)
							{
								<option value="@sc.Id">@sc.Name</option>
							}
						</select>
					</div>
				</div>
				<div class="col-md-6">
					<div class="form-group" style="margin-bottom: 5px;">
						<label for="price">Price:</label>
						<input type="number" class="form-control" id="price" name="price" placeholder="Enter price">
					</div>
				</div>
				<div class="col-md-12">
					<div class="form-group" style="margin-bottom: 5px;">
						<label for="Description">Description:</label>
						<textarea id="Description" name="Description" class="form-control" style="min-height: 200px;" required></textarea>
					</div>
				</div>
			</div>

			<h4 class="mt-5 mb-2">Location</h4>

			<div class="row">
				<div class="col-md-6">
					<div class="form-group" style="margin-bottom: 5px;">
						<label for="CountryId">Country:</label>
						<select id="CountryId" name="CountryId" class="form-control" required>
							@foreach (var country in Model.Countries)
							{
								<option value="@country.Id">@country.Name</option>
							}
						</select>
					</div>
				</div>
				<div class="col-md-6">
					<div class="form-group" style="margin-bottom: 5px;">
						<label for="CityId">City:</label>
						<select id="CityId" name="CityId" class="form-control" required>
							@foreach (var city in Model.Cities)
							{
								<option value="@city.Id">@city.Name</option>
							}
						</select>
					</div>
				</div>
				<div class="col-md-12">
					<div class="form-group" style="margin-bottom: 5px;">
						<label for="address">Address:</label>
						<input type="text" class="form-control" id="address" name="address" placeholder="Enter address">
					</div>
				</div>
			</div>

			<h4 class="mt-5 mb-2">Detailed Information</h4>

			<div class="row">
				<div class="col-md-4">
					<div class="form-group" style="margin-bottom: 5px;">
						<label for="yearOfConstruction">Year of Construction:</label>
						<input type="date" class="form-control" id="yearOfConstruction" name="yearOfConstruction">
					</div>
				</div>
				<div class="col-md-4">
					<div class="form-group" style="margin-bottom: 5px;">
						<label for="room">Room:</label>
						<input type="number" class="form-control" id="room" name="room" placeholder="Enter number of rooms">
					</div>
				</div>
				<div class="col-md-4">
					<div class="form-group" style="margin-bottom: 5px;">
						<label for="yearOfConstruction">Bathrooms:</label>
						<input type="number" class="form-control" id="" name="">
					</div>
				</div>
				<div class="col-md-4">
					<div class="form-group" style="margin-bottom: 5px;">
						<label for="room">Bedrooms:</label>
						<input type="number" class="form-control" id="" name="">
					</div>
				</div>
				<div class="col-md-4">
					<div class="form-group" style="margin-bottom: 5px;">
						<label for="room">Garages:</label>
						<input type="number" class="form-control" id="" name="">
					</div>
				</div>
				<div class="col-md-4">
					<div class="form-group" style="margin-bottom: 5px;">
						<label for="room">Area:</label>
						<input type="number" class="form-control" id="" name="">
					</div>
				</div>
			</div>

			<div style="margin-top: 20px; margin-bottom: 20px;">
				<input type="submit" value="Add Property" class="btn btn-primary mb-4">
			</div>
		</form>

	</div>
</div>
