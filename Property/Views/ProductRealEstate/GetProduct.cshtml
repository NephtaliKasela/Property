@model List<Property.DTOs.Product.ProductRealEstate.GetProductRealEstateDTO>

@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="mt-5 mb-4">
	<nav aria-label="breadcrumb">
		<ol class="breadcrumb mb-0">
			<li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Dashboard</a></li>
			<li class="breadcrumb-item active" aria-current="page">Real Estates</li>
		</ol>
	</nav>
</div>

<div class="row">
	<div class="col-sm-12">
		<div class="card card-table">
			<div class="card-body booking_card">
				<div class="table-responsive">
					<table class="datatable table table-stripped table table-hover table-center mb-0">
						<thead>
							<tr>
								<th>Id</th>
								<th>Title</th>
								<th>Property type</th>
								<th>Price</th>
								<th>Country</th>
								<th>City</th>
								<th>Registration Date</th>
								<th style="text-align: right;">Actions</th>
							</tr>
						</thead>
						<tbody>
							@{
								@foreach (var product in Model)
								{
									<tr>
										<th>@product.Id</th>
										<td>@product.Name</td>
										<td>@product.SubcategoryRealEstate.Name</td>
										<td>@product.Price $</td>
										<td>@product.Country.Name</td>
										<td>@product.City.Name</td>
										<td>@product.PublicationDate.ToLongDateString()</td>
										<td class="text-right">
											<div class="dropdown dropdown-action">
												<a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fas fa-ellipsis-v ellipse_color"></i></a>
												<div class="dropdown-menu dropdown-menu-right">
													<a class="dropdown-item" asp-controller="ProductRealEstate" asp-action="ProductDetails" asp-route-id="@product.Id"><i class="fas fa-eye m-r-5"></i> View</a>
													<a class="dropdown-item" asp-controller="ProductRealEstate" asp-action="UpdateProduct" asp-route-id="@product.Id"><i class="fas fa-pencil-alt m-r-5"></i> Edit</a>
													<a class="dropdown-item" asp-controller="ProductRealEstate" asp-action="DeleteProduct" asp-route-id="@product.Id" data-toggle="modal" data-target="#delete_asset"><i class="fas fa-trash-alt m-r-5"></i> Delete</a>
												</div>
											</div>
										</td>
									</tr>
								}
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>