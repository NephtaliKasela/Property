<div class="overlay"
     style="background-image: url('@Url.Content("~/Images/hero_bg_3.jpg")'); margin-top: 80px;">
    <div class="container">
        <div class="row justify-content-center align-items-center">
            <div class="col-lg-9 text-center">
                <h3  style="color: white; margin-top: 100px; margin-bottom: 100px;">
                    @Model.Name
                </h3>
            </div>
        </div>
    </div>
</div>

<div class="mb-0">
    <nav aria-label="breadcrumb">
        <div class="">
            <ol class="breadcrumb px-5">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" style="color: black;">Home</a></li>
                <li class="breadcrumb-item">
                    <a href="properties.html" style="color: black;">Properties</a>
                </li>
                <li class="breadcrumb-item"
                    aria-current="page" style="color: cornflowerblue;">
                        @Model.Address
                </li>
            </ol>
        </div>
    </nav>
</div>


<div class="section mt-0 pt-5">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-lg-6">
                <div class="img-property-slide-wrap">
                    <div class="img-property-slide">
                            if(Model.ProductImages.Count > 0)
                            {
                                @foreach(var image in Model.ProductImages)
                                {
                                    <img src="data:@image.ContentType;base64,@System.Convert.ToBase64String(image.ImageData)" class="img-fluid" />
                                }
                            }
                            else
                            {
                                <img src="~/images/img_1.jpg" alt="Image" class="img-fluid" />
                            }
                        }
                    </div>
                </div>
            </div>
             <div class="col-lg-5">
                <div class="property-item mb-3">
                <div class="property-content">
                        <div class="row">
                            <div class="col-6">
                                <h3 class=" mb-2"><span>$@Model.Price</span></h3>
                            </div>
                            <div class="col-6" style="text-align: right;">
                                @{
                                    @if (@Model.Rent != null && @Model.Rent.RentRealEstatePerDay != null)
                                    {
                                        <span class="py-1 px-2" style="background-color: cornflowerblue; color: white;">/ night</span>
                                    }
                                    else if (@Model.Rent != null && @Model.Rent.RentRealEstatePerMounth != null)
                                    {
                                        <span class="py-1 px-2" style="background-color: cornflowerblue; color: white;">/ month</span>
                                    }
                                    else if (@Model.Sell != null)
                                    {
                                        <span class="py-1 px-2" style="background-color: cornflowerblue; color: white;">sale</span>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>

                @* <h3 class="heading text-primary">@Model.City.Name, @Model.Country.Name</h3> *@
                <p class="meta">@Model.City.Name, @Model.Country.Name. @Model.Address</p>
                
                <div class="card" style="border: 0px;">
                    <p class="text-dark mt-0">
                        @Model.Description
                    </p>
                </div>

                <p class="meta mb-5">Published: @Model.PublicationDate.Day.@Model.PublicationDate.Month.@Model.PublicationDate.ToLongDateString()</p>

                <div>
                    @if(Model.Rent != null && Model.Rent.RentRealEstatePerDay != null)
                    {
                        <a asp-controller="Reservation" asp-action="Index" asp-route-id="@Model.Id"
                        class="btn btn-primary py-2 px-3"><i class="icon-calendar-check-o"></i> Booking</a>
                    }
                    else
                    {
                        
                        <a asp-controller="" asp-action=""
                        class="btn btn-primary py-2 px-3"><i class="icon-perm_phone_msg"></i> Get phone number</a>
                    }
                </div>

                <div class="d-block agent-box p-3">
                    <div class="row">
                        <div class="col-3">
                            <div class="img mb-4 justify-content-center" style="text-align: center;">
                                <div class="">
                                    <img src="~/images/person_2-min.jpg" alt="Image" class="img-fluid" />
                                </div>
                            </div>
                            <div class="text justify-content-center" style="text-align: center;">
                                <h3 class="mb-0">@Model.Agent.Name</h3>
                                <div class="meta mb-3">@Model.Agent.Profession</div>
                            </div>
                        </div>
                        <div class="col-9">
                            <div class="text">
                                <p>
                                    Lorem ipsum dolor sit amet consectetur adipisicing elit.
                                    Ratione laborum quo quos omnis sed magnam id ducimus saepe
                                </p>
                                <ul class="list-unstyled social dark-hover d-flex">
                                    <li class="me-1">
                                        <a href="#"><span class="icon-instagram"></span></a>
                                    </li>
                                    <li class="me-1">
                                        <a href="#"><span class="icon-twitter"></span></a>
                                    </li>
                                    <li class="me-1">
                                        <a href="#"><span class="icon-facebook"></span></a>
                                    </li>
                                    <li class="me-1">
                                        <a href="#"><span class="icon-linkedin"></span></a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    
                    

                    @* <div class="property-item mb-3" style="margin-top: 110px;">
                        <div class="property-content">
                            <div class="price mb-2"><span>+375 257 256 675</span></div>
                        </div>
                    </div> *@
                    
                </div>
            </div>
        </div>
    </div>
</div>