@model List<Property.DTOs.Continent.GetContinentDTO>

@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="mt-5 mb-4">
	<nav aria-label="breadcrumb">
		<ol class="breadcrumb mb-0">
			<li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Dashboard</a></li>
			<li class="breadcrumb-item active" aria-current="page">Continents</li>
		</ol>
	</nav>
</div>

<div class="page-header">
	<div class="row align-items-center">
		<div class="col">
			<div class="">
				@* <h4 class="card-title float-left mt-2">Choice</h4> *@
				<a asp-controller="Continent" asp-action="AddContinent" class="btn btn-primary float-right veiwbutton">
					Add Continent
				</a>
			</div>
		</div>
	</div>
</div>

<div class="row">
    <div class="col-sm-12">
        <div class="card card-table">
            <div class="card-body booking_card">
                <div class="table-responsive">
                    <table class="datatable table table-stripped table table-hover table-center mb-0">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Name</th>
                                <th>Description</th>
                                <th style="text-align: center;">Countries</th>
                                <th style="text-align: right;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                @foreach (var continent in Model)
                                {
                                    <tr>
                                        <td>@continent.Id</td>
                                        <td>@continent.Name</td>
                                        <td>@continent.Description</td>
                                        <td style="text-align: center;">@continent.Countries.Count</td>
                                        <td class="text-right">
                                            <div class="dropdown dropdown-action">
                                                <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fas fa-ellipsis-v ellipse_color"></i></a>
                                                <div class="dropdown-menu dropdown-menu-right">
                                                    <a class="dropdown-item" asp-controller="Continent" asp-action="UpdateContinent" asp-route-id="@continent.Id"><i class="fas fa-pencil-alt m-r-5"></i> Edit</a>
                                                    <a class="dropdown-item" asp-controller="Continent" asp-action="DeleteContinent" asp-route-id="@continent.Id" data-toggle="modal" data-target="#delete_asset"><i class="fas fa-trash-alt m-r-5"></i> Delete</a>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>