@model Property.DTOs.Product.ProductRealEstate.GetProductRealEstateDTO

@{
    Layout = "~/Views/Shared/_Layout3.cshtml";
}

<div class="hero overlay"
     style="background-image: url('@Url.Content("~/Images/hero_bg_1.jpg")')">
    <div class="container">
        <div class="row justify-content-center align-items-center">
            <div class="col-lg-9 text-center mt-5">
                <form asp-controller="Reservation" asp-action="SaveAddReservation">
                    <div class="row align-items-center">
                        <div class="col-lg-6">
                            <h2 style="color: white; font-size: 50px; text-align: left;">Make Your Reservation</h2>
                            <p style="color: white;">Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s,</p>
                        </div>
                        <div class="col-lg-6">
                            <div class="row bg-dark p-4">
                                <div class="col-lg-6">
                                    <input type="hidden" id="ProductRealEstateId" name="ProductRealEstateId" value="@Model.Id">

                                    <input type="text" class="form-control bg-transparent" id="UserName" name="UserName" placeholder="Name" style="margin-bottom: 5px; border: 0px; border-bottom: 1px solid White; border-radius: 0px; color: white;" required>
                                
                                </div>
                                <div class="col-lg-6">
                                    <input type="email" class="form-control bg-transparent" id="UserEmail" name="UserEmail" placeholder="Email" style="margin-bottom: 5px; border: 0px; border-bottom: 1px solid White; border-radius: 0px; color: white;" required>
                                </div>
                                <div class="col-lg-6">
                                    <input type="tel" class="form-control bg-transparent" id="Phone" name="Phone" placeholder="Phone" style="margin-bottom: 5px; border: 0px; border-bottom: 1px solid White; border-radius: 0px; color: white;" required>
                                </div>
                                <div class="col-lg-3">
                                    <input type="number" class="form-control bg-transparent" id="NumberOfPeople" name="NumberOfPeople" placeholder="Adult" style="margin-bottom: 5px; border: 0px; border-bottom: 1px solid White; border-radius: 0px; color: white;" required>
                                </div>
                                <div class="col-lg-3">
                                    <input type="text" class="form-control bg-transparent" id="NumberOfGuest" name="NumberOfGuest" placeholder="Guest" style="margin-bottom: 5px; border: 0px; border-bottom: 1px solid White; border-radius: 0px; color: white;" required>
                                </div>
                                <div class="col-lg-6">
                                    <input type="date" class="form-control bg-transparent" id="CheckIn" name="CheckIn" placeholder="Check in" style="margin-bottom: 5px; border: 0px; border-bottom: 1px solid White; border-radius: 0px; color: white;" required>
                                </div>
                                <div class="col-lg-6">
                                    <input type="date" class="form-control bg-transparent" id="CheckOut" name="CheckOut" placeholder="Check out" style="margin-bottom: 5px; border: 0px; border-bottom: 1px solid White; border-radius: 0px; color: white;" required>
                                </div>
                                <div class="col-lg-12">
                                    <div class="row align-items-center">
                                        <div class="col-6">
                                            <h5 style="text-align: left; color: gray;">Total</h5>
                                        </div>
                                        <div class="col-6">
                                            <input type="text" class="form-control bg-transparent mt-3" id="Profession" name="Profession" value="$100" style="margin-bottom: 5px; border: 0px; border-bottom: 1px solid White; border-radius: 0px; color: white;" readonly required>
                                        </div>
                                    </div>
                                    
                                </div>
                                <div class="col-lg-12">
                                    <input type="submit" class="form-control mt-3" id="Profession" name="Profession" value="Book" style="margin-bottom: 5px; background-color: #34495E; border: 0px; color: white;" required>
                                </div>
                                
                            </div>
                        </div>
                        
                    </div>
                </form>
                
                @* <h1 class="heading" data-aos="fade-up">Properties</h1>

                <nav aria-label="breadcrumb"
                     data-aos="fade-up"
                     data-aos-delay="200">
                    <ol class="breadcrumb text-center justify-content-center">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item active text-white-50"
                            aria-current="page">
                            Properties
                        </li>
                    </ol>
                </nav> *@
            </div>
        </div>
    </div>
</div>