<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->

	<title>Booking Form HTML Template</title>

	<!-- Google font -->
	<link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,900" rel="stylesheet">

	<!-- Bootstrap -->
	<link type="text/css" rel="stylesheet" href="~/bookingPage/css/bootstrap.min.css" />

	<!-- Custom stlylesheet -->
	<link type="text/css" rel="stylesheet" href="~/bookingPage/css/style.css" />

	<!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
	<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
	<!--[if lt IE 9]>
		  <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
		  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
		<![endif]-->

</head>

<body>
	<div id="booking" class="section">
		<div class="section-center">
			<div class="container">
				<div class="row">
					<div class="col-md-5">
						<div class="booking-cta">
							<h1>Make your reservation</h1>
							<p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Cupiditate laboriosam numquam at</p>
						</div>
					</div>
					<div class="col-md-6 col-md-offset-1">
						<div class="booking-form">
							<form asp-controller="Reservation" asp-action="SaveAddReservation">
                                <input type="hidden" id="ProductRealEstateId" name="ProductRealEstateId" value="@Model.Id">
								<div class="row">
									<div class="col-md-6">
										<div class="form-group">
											<input class="form-control" type="text" id="UserName" name="UserName">
											<span class="form-label">Name</span>
										</div>
									</div>
									<div class="col-md-6">
										<div class="form-group">
											<input class="form-control" type="email" id="UserEmail" name="UserEmail">
											<span class="form-label">Email</span>
										</div>
									</div>
								</div>
								<div class="row">
									<div class="col-md-6">
										<div class="form-group">
											<input class="form-control" type="tel" id="Phone" name="Phone">
											<span class="form-label">Phone</span>
										</div>
									</div>
									<div class="col-md-3 col-sm-6">
										<div class="form-group">
											<input class="form-control" type="number" id="NumberOfPeople" name="NumberOfPeople" min="0" max="@Model.Rent.RentRealEstatePerDay.NumberOfPoeple">
											<span class="form-label">People</span>
										</div>
									</div>
									<div class="col-md-3 col-sm-6">
										<div class="form-group">
											<input class="form-control" type="number" id="NumberOfGuest" name="NumberOfGuest" min="0" max="@Model.Rent.RentRealEstatePerDay.AdditionalPerson">
											<span class="form-label">Guest</span>
										</div>
									</div>
								</div>
								<div class="row">
									<div class="col-md-6">
										<div class="form-group">
											<input class="form-control" type="date" id="Arrival" name="Arrival" required>
											<span class="form-label">Arrival</span>
										</div>
									</div>
									<div class="col-md-6">
										<div class="form-group">
											<input class="form-control" type="date" id="Departure" name="Departure" required>
											<span class="form-label">Departure</span>
										</div>
									</div>
                                </div>
                                <div class="row px-4">
                                    <div class="col-lg-12">
                                        <div class="row align-items-center">
                                            <div class="col-6">
                                                <div style="text-align: left">
                                                    <h5 class="text-muted" id="amount-title">Amount</h5>
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <div class="amount" style="text-align: right;">
                                                    <h5 id="amount">$0</h5>
                                                    <script>
                                                        function calculateTotal() {
                                                            var startDate = new Date(document.getElementById('Arrival').value);
                                                            var endDate = new Date(document.getElementById('Departure').value);

                                                            // Calculate the difference in days
                                                            var differenceInTime = endDate.getTime() - startDate.getTime();
                                                            var differenceInDays = Math.ceil(differenceInTime / (1000 * 3600 * 24));

                                                            // Multiply the difference by 10
                                                            var total = differenceInDays * @Model.Price;

                                                            // Display the multiplied value
                                                            // Check if the total value is a number and not NaN
                                                            if (typeof total === 'number' && !isNaN(total)) {
                                                                // The total value is valid
                                                                document.getElementById('amount-title').textContent = "$" + @Model.Price + " * " + differenceInDays + " night(s)";
                                                                document.getElementById('amount').textContent = '$' + total;
                                                                
                                                                if (differenceInDays > 0)
                                                                {
                                                                    document.getElementById('booking-fee').textContent = '$' + 5;
                                                                    document.getElementById('total-amount').textContent = '$' + (total + 5);
                                                                }
                                                            } else {
                                                                // The total value is not a valid number
                                                                document.getElementById('amount').textContent = '$' + 0;
                                                            }
                                                        }

                                                        // Add event listeners to the date input elements
                                                        document.getElementById('Arrival').addEventListener('change', calculateTotal);
                                                        document.getElementById('Departure').addEventListener('change', calculateTotal);
                                                    </script>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="row">
                                            <div class="col-6">
                                                <div style="text-align: left">
                                                    <h5 class="text-muted">Booking fee</h5>
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <div style="text-align: right">
                                                    <h5 class="text-muted" id="booking-fee">$0</h5>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="row">
                                            <div class="col-6">
                                                <div style="text-align: left">
                                                    <h5 class="text-muted">Total</h5>
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <div style="text-align: right">
                                                    <h5 class="text-muted" id="total-amount">$0</h5>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
								<div class="form-btn mt-2">
									<button class="submit-btn">Book Now</button>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<script src="~/bookingPage/js/jquery.min.js"></script>
	<script>
		$('.form-control').each(function () {
			floatedLabel($(this));
		});

		$('.form-control').on('input', function () {
			floatedLabel($(this));
		});

		function floatedLabel(input) {
			var $field = input.closest('.form-group');
			if (input.val()) {
				$field.addClass('input-not-empty');
			} else {
				$field.removeClass('input-not-empty');
			}
		}
	</script>

