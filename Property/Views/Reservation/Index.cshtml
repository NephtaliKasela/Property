@model Property.DTOs.Product.ProductRealEstate.GetProductRealEstateDTO

@{
    Layout = "~/Views/Shared/_Layout3.cshtml";
}

<div class="hero overlay"
     style="background-image: url('@Url.Content("~/Images/hero_bg_2.jpg")')">
    <div class="container">
        <div class="row justify-content-center align-items-center">
            <div class="col-lg-9 text-center mt-5">
                <form asp-controller="Reservation" asp-action="SaveAddReservation">
                    <div class="row align-items-center">
                        <div class="col-lg-6">
                            <h3 style="color: white; font-size: 50px; text-align: left;">Make Your Reservation</h3>
                            <p style="color: white;">Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s,</p>
                        </div>
                        <div class="col-lg-6">
                            <div class="row bg-dark p-4">
                                <div class="col-lg-6">
                                    <input type="hidden" id="ProductRealEstateId" name="ProductRealEstateId" value="@Model.Id">

                                    <input type="text" class="form-control bg-transparent" id="UserName" name="UserName" placeholder="Name" style="margin-bottom: 5px; border: 0px; border-bottom: 1px solid White; border-radius: 0px; color: white;" required>
                                
                                </div>
                                <div class="col-lg-6">
                                    <input type="email" class="form-control bg-transparent" id="UserEmail" name="UserEmail" placeholder="Email" style="margin-bottom: 5px; border: 0px; border-bottom: 1px solid White; border-radius: 0px; color: white;" required>
                                </div>
                                <div class="col-lg-6">
                                    <input type="tel" class="form-control bg-transparent" id="Phone" name="Phone" placeholder="Phone" style="margin-bottom: 5px; border: 0px; border-bottom: 1px solid White; border-radius: 0px; color: white;" required>
                                </div>
                                <div class="col-lg-3">
                                    <input type="number" class="form-control bg-transparent" id="NumberOfPeople" name="NumberOfPeople" placeholder="Adult" style="margin-bottom: 5px; border: 0px; border-bottom: 1px solid White; border-radius: 0px; color: white;" required>
                                </div>
                                <div class="col-lg-3">
                                    <input type="number" class="form-control bg-transparent" id="NumberOfGuest" name="NumberOfGuest" placeholder="Guest" style="margin-bottom: 5px; border: 0px; border-bottom: 1px solid White; border-radius: 0px; color: white;" required>
                                </div>
                                <div class="col-lg-6">
                                    <input type="date" class="form-control bg-transparent" id="Arrival" name="Arrival" placeholder="Arrival" style="margin-bottom: 5px; border: 0px; border-bottom: 1px solid White; border-radius: 0px; color: white;" required>
                                </div>
                                <div class="col-lg-6">
                                    <input type="date" class="form-control bg-transparent" id="Departure" name="Departure" placeholder="Departure" style="margin-bottom: 5px; border: 0px; border-bottom: 1px solid White; border-radius: 0px; color: white;" required>
                                </div>
                                <div class="col-lg-12">
                                    <div class="row align-items-center mt-2">
                                        <div class="col-6">
                                            <div style="text-align: left">
                                                <h5 class="text-muted">Total</h5>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="amount" style="text-align: right; color: white;">
                                                <h5 id="amount" style="color: white;">$0</h5>
                                                <script>
                                                    function calculateTotal() {
                                                        var startDate = new Date(document.getElementById('Arrival').value);
                                                        var endDate = new Date(document.getElementById('Departure').value);

                                                        // Calculate the difference in days
                                                        var differenceInTime = endDate.getTime() - startDate.getTime();
                                                        var differenceInDays = Math.ceil(differenceInTime / (1000 * 3600 * 24));

                                                        // Multiply the difference by 10
                                                        var total = differenceInDays * @Model.Price;

                                                        // Display the multiplied value
                                                        // Check if the total value is a number and not NaN
                                                        if (typeof total === 'number' && !isNaN(total)) {
                                                            // The total value is valid
                                                            document.getElementById('amount').textContent = '$' + total;
                                                        } else {
                                                            // The total value is not a valid number
                                                            document.getElementById('amount').textContent = '$' + 0;
                                                        }
                                                    }

                                                    // Add event listeners to the date input elements
                                                    document.getElementById('Arrival').addEventListener('change', calculateTotal);
                                                    document.getElementById('Departure').addEventListener('change', calculateTotal);
                                                </script>

                                               
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="row align-items-center">
                                        <div class="col-6">
                                            <div style="text-align: left">
                                                <h5 class="text-muted">Reservation fee</h5>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="amount" style="text-align: right; color: white;">
                                                <h5 style="color: white;">$5</h5>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <input type="submit" class="form-control mt-3" id="Profession" name="Profession" value="Book" style="margin-bottom: 5px; background-color: #34495E; border: 0px; color: white;" required>
                                </div>
                                
                            </div>
                        </div>
                        
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>