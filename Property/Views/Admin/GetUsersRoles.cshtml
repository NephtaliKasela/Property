@model Property.DTOs.Role.GetUserRole

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="mt-5 mb-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Roles">Roles</a></li>
            <li class="breadcrumb-item active" aria-current="page">User role</li>
        </ol>
    </nav>
</div>

<div class="page-header">
    <div class="row align-items-center">
        <div class="col">
            <div class="">
                <h5 class="card-title float-left mt-2">Role: <mark class="px-3 py-1">@Model.Role</mark></h5>
                <form asp-controller="Admin" asp-action="GetUsers">
                    <input type="hidden" name="role" value="@Model.Role" />
                    <input type="submit" value="Add User" class="btn btn-primary float-right veiwbutton" />
                    </form>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <div class="card card-table">
            <div class="card-body booking_card">
                <div class="table-responsive">
                    <table class="datatable table table-stripped table table-hover table-center mb-0">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th class="text-center">Agent</th>
                                <th class="text-center">Booking</th>
                                <th style="text-align: right;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                @foreach (var user in Model.Users)
                                {
                                    <tr>
                                        <td>BKG-0001</td>
                                        <td>
                                            <h2 class="table-avatar">
                                                <a href="profile.html" class="avatar avatar-sm mr-2"><img class="avatar-img rounded-circle" src="~/admin_dashbaord-_hotel_bootstrap5/assets/img/profiles/avatar-03.jpg" alt="User Image"></a>
                                                @user.UserName
                                            </h2>
                                        </td>
                                        <td>@user.Email</td>
                                        <td>@user.PhoneNumber</td>
                                        @if (user.Agent is not null)
                                        {
                                            <td class="text-center">Yes</td>
                                        }
                                        else
                                        {
                                            <td class="text-center">No</td>
                                        }
                                        @if (user.Reservations is not null)
                                        {
                                            <td class="text-center">@user.Reservations.Count</td>
                                        }
                                        else
                                        {
                                            <td class="text-center">0</td>
                                        }

                                        <td class="text-right">
                                            <div class="dropdown dropdown-action">
                                                <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fas fa-ellipsis-v ellipse_color"></i></a>
                                                <div class="dropdown-menu dropdown-menu-right">
                                                    <a class="dropdown-item" asp-controller="" asp-action="" asp-route-id=""><i class="fas fa-pencil-alt m-r-5"></i> Remove</a>
                                                    <a class="dropdown-item" asp-controller="" asp-action="" asp-route-id="" data-toggle="modal" data-target="#delete_asset"><i class="fas fa-trash-alt m-r-5"></i> Delete</a>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>