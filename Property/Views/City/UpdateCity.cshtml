@model Property.DTOs.Actions.UpdateCity_action

@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="mt-5 mb-4">
	<nav aria-label="breadcrumb">
		<ol class="breadcrumb mb-0">
			<li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Dashboard</a></li>
			<li class="breadcrumb-item"><a asp-controller="City" asp-action="GetCity">Cities</a></li>
			<li class="breadcrumb-item active" aria-current="page">Update</li>
			<li class="breadcrumb-item active" aria-current="page">@Model.City.Name</li>
		</ol>
	</nav>
</div>

<div class="card py-5">
	<div class="row">
		<div class="col-lg-12">
			<div class="container">
				<form method="post" asp-controller="City" asp-action="SaveUpdateCity">
					<input type="hidden" id="Id" name="Id" value="@Model.City.Id" class="form-control" required>

					<div class="form-group">
						<label for="Name">Nom:</label>
						<input type="text" id="Name" name="Name" value="@Model.City.Name" class="form-control" required>
					</div>

					<div class="form-group">
						<label for="Description">Description:</label>
						<textarea id="Description" name="Description" class="form-control" required>@Model.City.Description</textarea>
					</div>

					<div class="form-group">
						<label for="CountryId">Country:</label>
						<select id="CountryId" name="CountryId" class="form-control" required>
							<option value="@Model.City.Country.Id">@Model.City.Country.Name</option>
							@foreach (var country in Model.Countries)
							{
								<option value="@country.Id">@country.Name</option>
							}
						</select>
					</div>

					<input type="submit" value="Update City" class="btn btn-primary mt-5">
				</form>
			</div>
		</div>
	</div>
</div>