@model Property.DTOs.Actions.UpdateCity_action

@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row page-titles">
	<ol class="breadcrumb">
		<li class="breadcrumb-item active"><a href="javascript:void(0)">City</a></li>
		<li class="breadcrumb-item"><a href="javascript:void(0)">Update</a></li>
	</ol>
</div>
<!-- row -->

<div class="row">
	<div class="col-lg-12">
		<div class="container">
			<form method="post" asp-controller="City" asp-action="SaveUpdateCity">
				<input type="hidden" id="Id" name="Id" value="@Model.City.Id" class="form-control" required>

				<div class="form-group">
					<label for="Name">Nom:</label>
					<input type="text" id="Name" name="Name" value="@Model.City.Name" class="form-control" required>
				</div>

				<div class="form-group">
					<label for="Description">Description:</label>
					<textarea id="Description" name="Description" class="form-control" required></textarea>

					<script>
						// Get a reference to the textarea element
						var textarea = document.getElementById('Description');

						// Set the value of the textarea using your model's value
						var modelValue = "@Model.City.Description";
						textarea.value = modelValue;
					</script>
				</div>

				<div class="form-group">
					<label for="CountryId">Country:</label>
					<select id="CountryId" name="CountryId" class="form-control" required>
						<option value="@Model.City.Country.Id">@Model.City.Country.Name</option>
						@foreach (var country in Model.Countries)
						{
							<option value="@country.Id">@country.Name</option>
						}
					</select>
				</div>

				<br />
				<input type="submit" value="Update City" class="btn btn-primary">
			</form>
		</div>
	</div>
</div>