@model List<Property.DTOs.Agent.GetAgentDTO>

@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="mt-5 mb-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Dashboard</a></li>
            <li class="breadcrumb-item active" aria-current="page">Agents</li>
        </ol>
    </nav>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover table-responsive-sm">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Profession</th>
                        <th class="text-center">Property</th>
                        <th>Registration date</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        if(Model.Count > 0)
                        {
                            foreach(var agent in Model)
                            {
                                <tr>
                                    <th>@agent.Id</th>
                                    <td>@agent.Name</td>
                                    <td>@agent.Profession</td>
                                    <td class="text-center">@agent.ProductsRealEstate.Count</td>
                                    <td>@agent.RegistrationDate.ToLongDateString()</td>
                                </tr>
                            }
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>