@model Property.DTOs.Actions.UpdateSubcategoryRealEstate_action 

@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row page-titles">
	<ol class="breadcrumb">
		<li class="breadcrumb-item active"><a href="javascript:void(0)">Table</a></li>
		<li class="breadcrumb-item"><a href="javascript:void(0)">Bootstrap</a></li>
	</ol>
</div>
<!-- row -->

<div class="container">
	<h2>Update SubCategory</h2>
	<br />

	<form method="post" asp-controller="SubcategoryRealEstate" asp-action="SaveUpdateSubcategory">
		<div class="form-group">
			<input type="hidden" class="form-control" id="id" name="id" value="@Model.Subcategory.Id" required>
		</div>

		<div class="form-group">
			<label for="CategoryId">Store:</label>
			<select id="CategoryId" name="CategoryId" class="form-control" required>
				<option value="@Model.Subcategory.Category.Id">@Model.Subcategory.Category.Name</option>
				@foreach (var category in Model.Categories)
				{
					<option value="@category.Id">@category.Name</option>
				}
			</select>
		</div>

		<div class="form-group">
			<label for="name">Name:</label>
			<input type="text" class="form-control" id="name" name="name" value="@Model.Subcategory.Name" required>
		</div>
		<div class="form-group">
			<label for="description">Description:</label>
			<textarea class="form-control" id="description" name="description" rows="4" required></textarea>

			<script>
				// Get a reference to the textarea element
				var textarea = document.getElementById('description');

				// Set the value of the textarea using your model's value
				var modelValue = "@Model.Subcategory.Description";
				textarea.value = modelValue;
			</script>
		</div>

		<br>
		<button type="submit" class="btn btn-primary">Update</button>
	</form>
</div>