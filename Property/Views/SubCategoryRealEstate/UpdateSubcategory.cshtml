@model Property.DTOs.Actions.UpdateSubcategoryRealEstate_action 

@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="mt-5 mb-4">
	<nav aria-label="breadcrumb">
		<ol class="breadcrumb mb-0">
			<li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Dashboard</a></li>
			<li class="breadcrumb-item"><a asp-controller="SubcategoryRealEstate" asp-action="GetSubcategory">Subcategories</a></li>
			<li class="breadcrumb-item active" aria-current="page">Update</li>
			<li class="breadcrumb-item active" aria-current="page">@Model.Subcategory.Name</li>
		</ol>
	</nav>
</div>

<div class="card py-5">
	<div class="container">
		<form method="post" asp-controller="SubcategoryRealEstate" asp-action="SaveUpdateSubcategory">
			<div class="form-group">
				<input type="hidden" class="form-control" id="id" name="id" value="@Model.Subcategory.Id" required>
			</div>

			<div class="form-group">
				<label for="CategoryId">Category:</label>
				<select id="CategoryId" name="CategoryId" class="form-control" required>
					<option value="@Model.Subcategory.Category.Id">@Model.Subcategory.Category.Name</option>
					@foreach (var category in Model.Categories)
					{
						<option value="@category.Id">@category.Name</option>
					}
				</select>
			</div>

			<div class="form-group">
				<label for="name">Name:</label>
				<input type="text" class="form-control" id="name" name="name" value="@Model.Subcategory.Name" required>
			</div>
			<div class="form-group">
				<label for="description">Description:</label>
				<textarea class="form-control" id="description" name="description" rows="4" required>@Model.Subcategory.Description</textarea>
			</div>

			<br>
			<button type="submit" class="btn btn-primary">Update</button>
		</form>
	</div>
</div>