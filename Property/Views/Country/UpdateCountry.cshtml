@model Property.DTOs.Actions.UpdateCountry_action

@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="mt-5 mb-4">
	<nav aria-label="breadcrumb">
		<ol class="breadcrumb mb-0">
			<li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Dashboard</a></li>
			<li class="breadcrumb-item"><a asp-controller="Country" asp-action="GetCountry">Countries</a></li>
			<li class="breadcrumb-item active" aria-current="page">Update</li>
			<li class="breadcrumb-item active" aria-current="page">@Model.Country.Name</li>
		</ol>
	</nav>
</div>

<div class="card py-5">
	<div class="row">
		<div class="col-lg-12">
			<div class="container">
				<form method="post" asp-controller="Country" asp-action="SaveUpdateCountry">
					<input type="hidden" id="Id" name="Id" value="@Model.Country.Id" class="form-control" required>

					<div class="form-group">
						<label for="Name">Nom:</label>
						<input type="text" id="Name" name="Name" value="@Model.Country.Name" class="form-control" required>
					</div>

					<div class="form-group">
						<label for="Description">Description:</label>
						<textarea id="Description" name="Description" class="form-control" required>@Model.Country.Description</textarea>
					</div>

					<div class="form-group">
						<label for="ContinentId">Continent:</label>
						<select id="ContinentId" name="ContinentId" class="form-control" required>
							<option value="@Model.Country.Continent.Id">@Model.Country.Continent.Name</option>
							@foreach (var continent in Model.Continents)
							{
								<option value="@continent.Id">@continent.Name</option>
							}
						</select>
					</div>

					<input type="submit" value="Update" class="btn btn-primary mt-5">
				</form>
			</div>
		</div>
	</div>
</div>