@model Property.DTOs.Actions.UpdateCountry_action

@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row page-titles">
	<ol class="breadcrumb">
		<li class="breadcrumb-item active"><a href="javascript:void(0)">Country</a></li>
		<li class="breadcrumb-item"><a href="javascript:void(0)">Update</a></li>
	</ol>
</div>
<!-- row -->

<div class="row">
	<div class="col-lg-12">
		<div class="container">
			<form method="post" asp-controller="Country" asp-action="SaveUpdateCountry">
				<input type="hidden" id="Id" name="Id" value="@Model.Country.Id" class="form-control" required>

				<div class="form-group">
					<label for="Name">Nom:</label>
					<input type="text" id="Name" name="Name" value="@Model.Country.Name" class="form-control" required>
				</div>

				<div class="form-group">
					<label for="Description">Description:</label>
					<textarea id="Description" name="Description" class="form-control" required></textarea>

					<script>
						// Get a reference to the textarea element
						var textarea = document.getElementById('Description');

						// Set the value of the textarea using your model's value
						var modelValue = "@Model.Country.Description";
						textarea.value = modelValue;
					</script>
				</div>

				<div class="form-group">
					<label for="ContinentId">Continent:</label>
					<select id="ContinentId" name="ContinentId" class="form-control" required>
						<option value="@Model.Country.Continent.Id">@Model.Country.Continent.Name</option>
						@foreach (var continent in Model.Continents)
						{
							<option value="@continent.Id">@continent.Name</option>
						}
					</select>
				</div>

				<br />
				<input type="submit" value="Update" class="btn btn-primary">
			</form>
		</div>
	</div>

</div>