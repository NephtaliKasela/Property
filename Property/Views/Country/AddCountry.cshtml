@model List<Property.DTOs.Continent.GetContinentDTO>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row page-titles">
    <ol class="breadcrumb">
        <li class="breadcrumb-item active"><a href="javascript:void(0)">Continent</a></li>
        <li class="breadcrumb-item"><a href="javascript:void(0)">Add</a></li>
    </ol>
</div>

<div class="container">
    <form method="post" asp-controller="Country" asp-action="SaveAddCountry">
        <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" class="form-control" id="name" name="name" required>
        </div>

        <div class="form-group">
            <label for="Description">Description:</label>
            <textarea id="Description" name="Description" class="form-control" required></textarea>
        </div>

        <div class="form-group">
            <label for="continentId">Continent:</label>
            <select id="continentId" name="continentId" class="form-control" required>
                @* <option value="">Sélectionner une catégorie</option> *@
                <!-- Ajoutez ici les options de catégorie en fonction de votre logique -->
                @foreach (var continent in Model)
                {
                    <option value="@continent.Id">@continent.Name</option>
                }
            </select>
        </div>

        <br />
        <input type="submit" value="Add Country" class="btn btn-primary">
    </form>
</div>