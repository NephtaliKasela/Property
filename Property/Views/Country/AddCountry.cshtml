@model List<Property.DTOs.Continent.GetContinentDTO>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="mt-5 mb-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-controller="Country" asp-action="GetCountry">Countries</a></li>
            <li class="breadcrumb-item active" aria-current="page">new Country</li>
        </ol>
    </nav>
</div>

<div class="card py-5">
    <div class="container">
        <form method="post" asp-controller="Country" asp-action="SaveAddCountry">
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" class="form-control" id="name" name="name" required>
            </div>

            <div class="form-group">
                <label for="Description">Description:</label>
                <textarea id="Description" name="Description" class="form-control" required></textarea>
            </div>

            <div class="form-group">
                <label for="continentId">Continent:</label>
                <select id="continentId" name="continentId" class="form-control" required>
                    @* <option value="">Sélectionner une catégorie</option> *@
                    <!-- Ajoutez ici les options de catégorie en fonction de votre logique -->
                    @foreach (var continent in Model)
                    {
                        <option value="@continent.Id">@continent.Name</option>
                    }
                </select>
            </div>

            <input type="submit" value="Add Country" class="btn btn-primary mt-4">
        </form>
    </div>
</div>
