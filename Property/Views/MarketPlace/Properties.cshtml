                                    {
                                        <option value="@country.Id">@country.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-xl-3 col-sm-6 col-12">
                            <div class="form-group mb-3">
                                <select class="form-control select-filter" name="CityId" data-style="btn-primary" data-placeholder="Country" data-minimum-results-for-search="Infinity">
                                    <option label="City"></option>
                                    @foreach (var city in Model.Cities)
                                    {
                                        <option value="@city.Id">@city.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-xl-3 col-sm-6 col-12">
                            <div class="form-group mb-3">
                                <select class="form-control select-filter" name="Category" data-style="btn-primary" data-placeholder="Property Type" data-minimum-results-for-search="Infinity">
                                    <option value="All">All</option>
                                    <option value="Rent">For Rent</option>
                                    <option value="Sale">For Sale</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-xl-3 col-sm-6 col-12">
                            <div class="form-group mb-3">
                                <select class="form-control select-filter" name="PropertyTypeId" data-style="btn-primary" data-minimum-results-for-search="Infinity">
                                    <option label="Property Type" class="text-muted"></option>
                                    @foreach (var propertyType in Model.PropertyTypes)
                                    {
                                        <option value="@propertyType.Id">@propertyType.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-xl-3 col-sm-6 col-12">
                            <div class="form-group mb-3">
                                <input type="number" class="form-control" name="MinPrice" data-style="btn-primary" placeholder="Min Price" min="0" max="@Model.Properties.Max(x => x.Price)" data-minimum-results-for-search="Infinity">
                            </div>
                        </div>
                        <div class="col-xl-3 col-sm-6 col-12">
                            <div class="form-group mb-3">
                                <input type="number" class="form-control" name="MaxPrice" data-style="btn-primary" placeholder="Max Price" min="0" max="@Model.Properties.Max(x => x.Price)" data-minimum-results-for-search="Infinity">
                            </div>
                        </div>
