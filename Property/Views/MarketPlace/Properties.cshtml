                                <input type="number" class="form-control" name="MinBed" data-style="btn-primary" placeholder="Min Beds" min="0" max="@Model.Properties.Max(x => x.BedRoom)" data-minimum-results-for-search="Infinity">
                            </div>
                        </div>
                        <div class="col-xl-2 col-sm-6 col-12">
